@using SSH_Configurer_UI.Model;

@if (Devices is null)
{
    <br />
    <span>Devices are loading...</span>
    <br />
}
else if (Devices.Count == 0)
{
    <br />
    <span>No devices to display</span>
    <br />
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Hostname</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var device in Devices)
            {
                <tr class="@(device.IsSelected ? "selected-row" : "")" @onclick="() => ToggleDeviceSelection(device)">
                    <td>@device.Name</td>
                    <td>@device.Hostname</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {

    [Parameter]
    public List<DeviceSelect> Devices { get; set; }

    private void ToggleDeviceSelection(DeviceSelect device)
    {
        device.IsSelected = !device.IsSelected;
    }

}